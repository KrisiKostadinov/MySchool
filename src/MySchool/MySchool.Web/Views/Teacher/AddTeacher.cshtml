@model MySchool.Web.Models.AddTeacherViewModel

@{
    ViewData["Title"] = "AddTeacher";
}

<h4>Добави учител</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTeacher">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" autocomplete="off" autofocus />
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Откажи</a>
            </div>
        </form>
    </div>
</div>

