@model MySchool.Web.Models.AddTeacherViewModel

@{
    ViewData["Title"] = "AddTeacher";
}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<h4>Нов учител</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTeacher">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" autocomplete="off" autofocus />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" autocomplete="off" autofocus />
            </div>
            <div class="form-group" id="datetimepicker2">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" type="text" class="form-control" autocomplete="off" autofocus />
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" autocomplete="off" autofocus />
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Откажи</a>
            </div>
        </form>
    </div>
</div>
<script>
    $('#datepicker').datepicker({
        format: 'dd/mm/yyyy'
    });
</script>
