{{#array}}
<div id="{{id}}">
    <h4 class="pb-4 text-center">Изберете учител за - {{student}}</h4>
</div>
{{#teachers}}
<ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
        {{teacher}}
        <span><button id="{{teacherId}}" class="btn btn-outline-primary">Добави</button></span>
    </li>
</ul>
{{/teachers}}
{{/array}}
<div class="toast" data-autohide="false">
    <div class="toast-header">
        <strong class="mr-auto text-primary">Toast Header</strong>
        <small class="text-muted">5 mins ago</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
    </div>
    <div class="toast-body">
        Some text inside the toast body
    </div>
</div>
<script>
    $(document).ready(function () {
        $(document).click(function () {
            if (!$('#showTeachers').is(':visible')) {
                clearInfo();
            }
        });

        $('button').click(function (event) {
            var teacherId = $(this)["0"].id;
            var id = $("div")[11].id;

            $.ajax({
                method: 'POST',
                url: '/Teacher/AddStudentToTeacher',
                data: {
                    id: id,
                    teacherId: teacherId
                },
                success: function (data) {
                    if (data === 'Succeeded') {
                        $('.toast').toast('show');
                    }
                    else {
                        console.log(data);
                    }
                }
            });
        });

        function clearInfo() {
            $(this)["0"].id = null;
            $("div")[11].id = null;
        }

    });
</script>